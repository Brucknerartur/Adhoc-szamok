<Application x:Class="Adhoc_szamok.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Adhoc_szamok"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Button">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Style.Resources>
        </Style>

        <Style TargetType="{x:Type TextBlock}" x:Key="Title">
            <Setter Property="Grid.Column" Value="0"/>
            <Setter Property="Foreground" Value="#ff3232"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Grid.ColumnSpan" Value="2"/>
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="FontFamily" Value="Bookman Old Style"/>
        </Style>

        <Style TargetType="{x:Type ListBox}" x:Key="szamokList">
            <Setter Property="Grid.Row" Value="1"/>
            <Setter Property="Grid.Column" Value="0"/>
            <Setter Property="Margin" Value="20,20,20,20"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Style.Resources>
        </Style>

        <Style TargetType="{x:Type ListBoxItem}" x:Key="szamokListItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        </Style>

        <Style TargetType="{x:Type Grid}" x:Key="szamokListItemGrid">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>

        <Style TargetType="{x:Type Label}" x:Key="szamokListItemGridLabel">
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <Style TargetType="{x:Type Button}" x:Key="szamokListItemGridButton">
            <Setter Property="Grid.Column" Value="1"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Style.Resources>
        </Style>

        <Style TargetType="{x:Type TextBlock}" x:Key="selectedSongTextblock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Grid.Column" Value="1"/>
            <Setter Property="Grid.Row" Value="1"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <Style TargetType="{x:Type Button}" x:Key="selectedSongButton">
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Padding" Value="3"/>
            <Setter Property="Grid.Row" Value="1"/>
            <Setter Property="Grid.Column" Value="11"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Style.Resources>
        </Style>

        <Style TargetType="{x:Type TextBlock}" x:Key="selectedSongTitle">
            <Setter Property="Foreground" Value="White"/>

        </Style>

        <Style TargetType="{x:Type TextBox}" x:Key="selectedSongInput">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10,0,10,0"/>
            <Setter Property="Padding" Value="3"/>
            <Setter Property="IsEnabled" Value="False"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Style.Resources>
        </Style>

        <Style TargetType="{x:Type TextBlock}" x:Key="selectedSongLabel">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
 
        <Style TargetType="{x:Type CheckBox}" x:Key="selectedSongCheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                      
                            <StackPanel Orientation="Horizontal">
                            <Grid Width="20" Height="20" Margin="0,0,5,0">

                                <Border x:Name="Box"
                                CornerRadius="3"
                                BorderThickness="2"
                                BorderBrush="Gray"
                                Background="Transparent"/>

                                <Path x:Name="GreenCheck"
                              Data="M 5 11 L 9 15 L 17 5"
                              Stroke="Green"
                              StrokeThickness="2"
                              Visibility="Collapsed"/>

                            <Path x:Name="RedX"
                              Data="M 4 4 L 16 16 M 16 4 L 4 16"
                              Stroke="Red"
                              StrokeThickness="2"
                              Visibility="Collapsed"/>
                            </Grid>

                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>

                        <ControlTemplate.Triggers>

                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="GreenCheck" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="RedX" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="Box" Property="Background" Value="#CCDDFFCC"/>
                                <Setter TargetName="Box" Property="BorderBrush" Value="Green"/>
                            </Trigger>

                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="GreenCheck" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="RedX" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="Box" Property="Background" Value="#CCFFDDCC"/>
                                <Setter TargetName="Box" Property="BorderBrush" Value="Red"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type TextBlock}" x:Key="searchSongTitle">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Bookman Old Style"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="30"/>

        </Style>

        <Style TargetType="{x:Type ComboBox}" x:Key="searchSongCombobox">
            <Setter Property="MaxHeight" Value="50"/>
            <Setter Property="MaxWidth" Value="300"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <!--<Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">

                        <Border CornerRadius="20"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
                </Setter>-->
        </Style>

         <Style TargetType="{x:Type StackPanel}" x:Key="searchSongStackPanel">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="{x:Type TextBlock}" x:Key="searchSongTextblock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="25"/>
        </Style>
    </Application.Resources>
</Application>