<Window x:Class="Adhoc_szamok.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Adhoc_szamok"
        mc:Ignorable="d"
        Title="MainWindow"  
        MinWidth="1250"
        MinHeight="800"
        Background="#181735"
        FontSize="20"
        Loaded="Window_Loaded"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Background="#0f0f2D"
              Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Ad Hoc szamok"
                       Style="{StaticResource Title}"/>


        </Grid>
        <ListBox
                Name="szamokList" 
                Style="{StaticResource szamokList}" 
                SelectionChanged="szamokList_SelectionChanged">
            <ListBoxItem Style="{StaticResource szamokListItem}">
                <Grid Style="{StaticResource szamokListItemGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Ad Hoc"
                           Style="{StaticResource szamokListItemGridLabel}"/>

                    <Button Content="Módosítás"
                            Style="{StaticResource szamokListItemGridButton}"/>
                </Grid>
            </ListBoxItem>

        </ListBox>

        <TextBlock 
            Text="Ad Hoc - Kivalasztott szam"
            Style="{StaticResource selectedSongTextblock}"/>
        <Button
            Content="Új"
            Name="ujSzam"
            Style="{StaticResource selectedSongButton}">
        </Button>

        <Grid
            Grid.Row="2"
            Grid.RowSpan="1"
            Grid.ColumnSpan="2"
            >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="45"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock
                Text="Ad Hoc"
                Foreground="White"
                Grid.Row="0"
                Grid.Column="0"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                />

            <TextBlock
                Text="Szám címe"
                Foreground="White"
                Grid.Row="0"
                Grid.Column="1"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                />
            <TextBlock
                Text="hossza"
                Foreground="White"
                Grid.Row="0"
                Grid.Column="2"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                />
            <TextBlock
                Text="keletkezése"
                Foreground="White"
                Grid.Row="0"
                Grid.Column="3"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                />
            <TextBlock
                Text="Ki van-e adva"
                Foreground="White"
                Grid.Row="0"
                Grid.Column="4"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                />
        </Grid>
        <Grid
            Grid.Row="2"
            Grid.RowSpan="1"
            Grid.ColumnSpan="2"
            Margin="50,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="45"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock
                Text="Hossz:"
                Grid.Row="1"
                Grid.Column="0"
                Style="{StaticResource selectedSongLabel}"
                />
            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Name="selectedSongLenght"
                Style="{StaticResource selectedSongInput}"/>
            <TextBlock
                Text="Keletkezés:"
                Grid.Row="2"
                Grid.Column="0"
                Style="{StaticResource selectedSongLabel}"
                />
            <TextBox
                Grid.Row="2"
                Grid.Column="1"
                Name="selectedSongOrigin"
                Style="{StaticResource selectedSongInput}"/>
            <TextBlock
                Text="Szerző:"
                Grid.Row="1"
                Grid.Column="2"
                Style="{StaticResource selectedSongLabel}"
                />
            <TextBox
                Grid.Row="1"
                Grid.Column="3"
                Name="selectedSongInstrumentAuthor"
                Style="{StaticResource selectedSongInput}"/>
            <TextBlock
                Text="Szöveg író:"
                Grid.Row="2"
                Grid.Column="2"
                Style="{StaticResource selectedSongLabel}"
                />
            <TextBox
                Grid.Row="2"
                Grid.Column="3"
                Name="selectedSongLyricsAuthor"
                Style="{StaticResource selectedSongInput}"/>
            <TextBlock
                Text="Cím:"
                Grid.Row="1"
                Grid.Column="4"
                Style="{StaticResource selectedSongLabel}"
                />
            <TextBox
                Grid.Row="1"
                Grid.Column="5"
                Name="selectedSongTitle"
                Style="{StaticResource selectedSongInput}"/>
            
            <CheckBox
                    Content="Ki van-e adva"
                    IsEnabled="False"
                    Grid.Row="3"
                    Grid.Column="0"
                    Name="selectedSongIsItOut"
                    Style="{StaticResource selectedSongCheckBox}"
                    />
            <Button
                Content="Mentés"
                IsEnabled="False"
                Grid.Column="5"
                Grid.Row="3"
                Name="saveButton"
                Click="Save"
                Style="{StaticResource selectedSongButton}"/>
        </Grid>
        <TextBlock
            Text="Szűrés műfaj alapján"
            Grid.Row="3"
            Style="{StaticResource searchSongTitle}"
            />
        <ComboBox
            Name="comboStilus"
            Grid.Row="4"
            Style="{StaticResource searchSongCombobox}"
            SelectedIndex="0" 
            SelectionChanged="comboStilus_SelectionChanged">
            <ComboBoxItem
                Content="Kérem válasszon egy műfajt"
                Name="DefComb"/>
        </ComboBox>
        <StackPanel
            Name="StyleStackPanel"
            Grid.Column="1"
            Grid.Row="4"
            Style="{StaticResource searchSongStackPanel}">
            <TextBlock
                Text="Kérem válasszon egy műfajt"
                Name="Default"
                Style="{StaticResource searchSongTextblock}"/>
        </StackPanel>
    </Grid>
</Window>